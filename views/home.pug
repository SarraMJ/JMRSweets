        label(for="ingredient1")
          input(type="checkbox" id="ingredient1" name="ingredients" value="baking powder") 
          | Baking Powder
      li
        label(for="ingredient2")
          input(type="checkbox" id="ingredient2" name="ingredients" value="baking soda") 
          | Baking Soda
      li
        label(for="ingredient3")
          input(type="checkbox" id="ingredient3" name="ingredients" value="vanilla") 
          | Vanilla
